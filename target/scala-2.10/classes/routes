# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /login                      controllers.auth.Authentication.login
POST    /login                      controllers.auth.Authentication.authenticate
GET     /logout                     controllers.auth.Authentication.logout

# Spark Jar
GET     /sparkjar                   controllers.spark.SparkJar.uploadpage
POST     /sparkjar                  controllers.spark.SparkJar.upload
GET     /executejar                 controllers.spark.SparkJar.executejarpage
POST     /executejar                controllers.spark.SparkJar.executejar
GET     /errorpage                  controllers.spark.SparkJar.errorpage

# Spark Stream
GET     /stream                     controllers.spark.SparkStream.stream
POST     /stremupload              controllers.spark.SparkStream.stremupload
GET     /streamArgs               controllers.spark.SparkStream.streamArgs
POST     /streamExecute                controllers.spark.SparkStream.streamExecute
GET     /errorpage                  controllers.spark.SparkStream.errorpage

# Saprk Sql
GET     /sparksql                   controllers.spark.SparkSql.sqlpage
POST     /sparksql                  controllers.spark.SparkSql.executesql

#Dashboard
GET     /yarnInfo                   controllers.hadoop.YarnList.yarnInfo
GET     /yarnlist                   controllers.hadoop.YarnList.yarnlist
GET     /workerlist                 controllers.hadoop.YarnList.workerlist
GET     /spark_info                 controllers.hadoop.YarnList.spark_info
GET     /sparklist                  controllers.hadoop.YarnList.sparklist
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#TestIndex
GET     /registration                controllers.auth.Authentication.registration
POST    /registration                controllers.auth.Authentication.verifying
GET     /mail                         controllers.auth.Authentication.mail(user)
GET     /mail/verifyingmail             controllers.auth.Authentication.verifyingmail(email,validateCode)
GET     /findpwd                   controllers.auth.Authentication.findpwd
GET    /captcha                          controllers.auth.Authentication.captcha
POST    /findpwd                  controllers.auth.Authentication.resetpwd
GET     /mail/setpwd                     controllers.auth.Authentication.setpwd(email,pwdToken)
POST   /updatepwd                   controllers.auth.Authentication.updatepwd



# Spark Jar
GET     /sparkjar                     controllers.spark.SparkJar.uploadpage
POST     /sparkjar                     controllers.spark.SparkJar.upload
GET     /executejar                     controllers.spark.SparkJar.executejarpage
POST     /executejar                     controllers.spark.SparkJar.executejar
GET     /errorpage                     controllers.spark.SparkJar.errorpage



# Saprk Sql
GET     /sparksql                     controllers.spark.SparkSql.sqlpage
POST     /sparksql                     controllers.spark.SparkSql.executesql

#Dashboard
GET     /yarnInfo                     controllers.hadoop.YarnList.yarnInfo
GET     /yarnlist                     controllers.hadoop.YarnList.yarnlist
GET     /workerlist                   controllers.hadoop.YarnList.workerlist
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET   /jobs                          controllers.monitor.MonitorController.jobs
GET   /streaming                     controllers.monitor.MonitorController.streaming





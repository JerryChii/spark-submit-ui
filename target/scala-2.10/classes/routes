# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /login                      controllers.auth.Authentication.login
POST    /login                      controllers.auth.Authentication.authenticate
GET     /logout                     controllers.auth.Authentication.logout

# Spark Jar
GET     /sparkjar                   controllers.SparkJar.uploadpage
POST     /sparkjar                  controllers.SparkJar.upload
GET     /executejar                 controllers.SparkJar.executejarpage
POST     /executejar                controllers.SparkJar.executejar
GET     /errorpage                  controllers.SparkJar.errorpage

# Spark Stream
GET     /stream                     controllers.SparkStream.stream
POST     /stremupload              controllers.SparkStream.stremupload
GET     /streamArgs               controllers.SparkStream.streamArgs
POST     /streamExecute                controllers.SparkStream.streamExecute
GET     /errorpage                  controllers.SparkStream.errorpage

# Saprk Sql
GET     /sparksql                   controllers.SparkSql.sqlpage
POST     /sparksql                  controllers.SparkSql.executesql

#Dashboard
GET     /yarnInfo                   controllers.YarnList.yarnInfo
GET     /yarnlist                   controllers.YarnList.yarnlist
GET     /workerlist                 controllers.YarnList.workerlist
GET     /spark_info                 controllers.YarnList.spark_info
GET     /sparklist                  controllers.YarnList.sparklist
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#TestIndex
GET     /registration                controllers.auth.Authentication.registration
POST    /registration                controllers.auth.Authentication.verifying
GET     /mail                         controllers.auth.Authentication.mail(user)
GET     /mail/verifyingmail             controllers.auth.Authentication.verifyingmail(email,validateCode)
GET     /findpwd                   controllers.auth.Authentication.findpwd
GET    /captcha                          controllers.auth.Authentication.captcha
POST    /findpwd                  controllers.auth.Authentication.resetpwd
GET     /mail/setpwd                     controllers.auth.Authentication.setpwd(email,pwdToken)
POST   /updatepwd                   controllers.auth.Authentication.updatepwd



# Spark Jar
GET     /sparkjar                     controllers.SparkJar.uploadpage
POST     /sparkjar                     controllers.SparkJar.upload
GET     /executejar                     controllers.SparkJar.executejarpage
POST     /executejar                     controllers.SparkJar.executejar
GET     /errorpage                     controllers.SparkJar.errorpage



# Saprk Sql
GET     /sparksql                     controllers.SparkSql.sqlpage
POST     /sparksql                     controllers.SparkSql.executesql

#Dashboard
GET     /yarnInfo                     controllers.YarnList.yarnInfo
GET     /yarnlist                     controllers.YarnList.yarnlist
GET     /workerlist                   controllers.YarnList.workerlist
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)




